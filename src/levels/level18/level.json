{
    "title": "Выдираем ссылки",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "page.html",
                "content": "<html><body><a href=\"https://target.com/page1\">Link 1</a><a href=\"http://another.com\">Link 2</a><a href=\"https://target.com/page2\">Link 3</a></body></html>"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "page.html"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "links.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "links.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "links.txt",
                "content": "https://target.com/page1"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "links.txt",
                "content": "https://target.com/page2"
            }
        },
        {
            "validator": "file_not_contains",
            "args": {
                "path": "links.txt",
                "content": "another.com"
            }
        }
    ]
}
