            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": ".ded_secret"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "all_files.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "all_files.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "all_files.txt",
                "content": ".ded_secret"
            }
        }
    ]
}
