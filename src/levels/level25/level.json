{
    "title": "Диплом: Простой рекон",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "recon_report.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "recon_report.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "recon_report.txt",
                "content": "IP ADDRESS:"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "recon_report.txt",
                "content": "MAIL SERVERS:"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "recon_report.txt",
                "content": "github.com"
            }
        }
    ]
}
