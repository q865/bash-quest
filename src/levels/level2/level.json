{
    "title": "Команда `ls -l`",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "detailed_list.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "detailed_list.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "detailed_list.txt",
                "content": "drwx"
            }
        }
    ]
}
