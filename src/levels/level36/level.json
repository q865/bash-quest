{
    "title": "Запуск скриптов",
    "hint": "Используй команду `node script.js` для запуска скриптов.",
    "validation": [
        {
            "validator": "file_exists",
            "args": {
                "path": "hello.js"
            }
        },
        {
            "validator": "script_produces_output",
            "args": {
                "script": "node hello.js",
                "output": "Hello from Node.js"
            }
        }
    ]
}
