{
  "title": "Запуск Node.js скриптов",
  "hint": "node trainee_stuff/hello.js > trainee_stuff/node_output.txt",
  "validation": [
    {
      "validator": "file_exists",
      "args": {
        "path": "trainee_stuff/hello.js"
      }
    },
    {
      "validator": "file_contains",
      "args": {
        "path": "trainee_stuff/node_output.txt",
        "content": "Node.js, сука, работает!"
      }
    }
  ],
  "cleanup": [
    {
      "action": "delete_file",
      "args": {
        "path": "trainee_stuff/hello.js"
      }
    },
    {
      "action": "delete_file",
      "args": {
        "path": "trainee_stuff/node_output.txt"
      }
    }
  ]
}
