{
    "title": "Запуск скриптов Node.js",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "secret.txt",
                "content": "Node.js - eto sila, a Bash - mogila. Ded."
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "secret.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "reader.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "output.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node reader.js > output.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "output.txt",
                "content": "Node.js - eto sila"
            }
        }
    ]
}
