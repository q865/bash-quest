{
    "title": "Диплом: Анализатор логов",
    "setup": [
        {
            "action": "create_directory",
            "args": {
                "path": "logs"
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "logs/app1.log",
                "content": "INFO\nERROR: Null pointer\nWARN\nERROR: Connection refused"
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "logs/app2.log",
                "content": "INFO\nINFO\nWARN"
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "logs/app3.log",
                "content": "ERROR: Disk full"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_directory",
            "args": {
                "path": "logs"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "report.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "error_summary.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "bash report.sh logs"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "error_summary.txt",
                "content": "TOTAL ERRORS: 3"
            }
        }
    ]
}
