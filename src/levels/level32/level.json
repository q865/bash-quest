{
    "title": "Анализ логов: awk",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "sales.log",
                "content": "item: bread, price: 50\nitem: vodka, price: 500\nitem: sigarettes, price: 150"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "sales.log"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "total.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "total.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "total.txt",
                "content": "700"
            }
        }
    ]
}
