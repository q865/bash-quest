{
    "title": "Знакомство с `curl`",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "evidence.html"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "evidence.html"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "evidence.html",
                "content": "Example Domain"
            }
        }
    ]
}
