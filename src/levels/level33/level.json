{
    "title": "Функции в Bash",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "logger.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "system.log"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "bash logger.sh"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "system.log",
                "content": "[INFO]"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "system.log",
                "content": "[WARN]"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "system.log",
                "content": "System started"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "system.log",
                "content": "Low memory"
            }
        }
    ]
}
