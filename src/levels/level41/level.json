{
    "title": "Продвинутые CLI: Флаги",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "cli.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "output.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node cli.js --name Ded --greeting 'Privet' > output.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "output.txt",
                "content": "Privet, Ded!"
            }
        }
    ]
}
