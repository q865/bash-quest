{
    "title": "Отправка данных: curl POST",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "api_response.json"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "api_response.json"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "api_response.json",
                "content": "ded_moroz"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "api_response.json",
                "content": "secret_agent"
            }
        }
    ]
}
