{
    "title": "Замена текста: sed",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "config.ini",
                "content": "HOST=127.0.0.1\nPORT=8080\nDEBUG=false"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "config.ini"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "new_config.ini"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "new_config.ini"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "new_config.ini",
                "content": "DEBUG=true"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "new_config.ini",
                "content": "HOST=127.0.0.1"
            }
        }
    ]
}
