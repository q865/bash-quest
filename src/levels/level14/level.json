{
    "title": "Сканирование портов с `nmap`",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "scan_report.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "scan_report.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "scan_report.txt",
                "content": "1337/tcp"
            }
        }
    ]
}
