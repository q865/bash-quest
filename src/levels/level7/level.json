{
    "title": "Копирование файлов и директорий",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "secret_recipe.txt",
                "content": "Водка, огуречный рассол, и слеза врага."
            }
        },
        {
            "action": "create_directory",
            "args": {
                "path": "archive/old_photos"
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "archive/old_photos/ded_on_tank.jpg",
                "content": "binary_data"
            }
        },
        {
            "action": "create_directory",
            "args": {
                "path": "backup"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "secret_recipe.txt"
            }
        },
        {
            "action": "delete_directory",
            "args": {
                "path": "archive"
            }
        },
        {
            "action": "delete_directory",
            "args": {
                "path": "backup"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "backup/secret_recipe.txt"
            }
        },
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "backup/archive/old_photos/ded_on_tank.jpg"
            }
        }
    ]
}
