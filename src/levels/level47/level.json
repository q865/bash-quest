{
    "title": "Атака на юзеров: XSS",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "xss_generator.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "malicious_link.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node xss_generator.js > malicious_link.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "malicious_link.txt",
                "content": "https://vulnerable-site.com/search?query=%3Cscript%3Ealert%28%27HACKED%21%27%29%3C/script%3E"
            }
        }
    ]
}
