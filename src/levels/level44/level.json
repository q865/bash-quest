{
    "title": "Свой веб-сервер: Express",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "api_server.js"
            }
        }
    ],
    "validation": [
        {
            "validator": "script_produces_output",
            "args": {
                "script": "node api_server.js & sleep 1 && curl -s http://localhost:1337/api/v1/status && kill $!",
                "output": "{\"status\":\"ok\"}"
            }
        }
    ]
}
