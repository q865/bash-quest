{
    "title": "Первый Bash-скрипт",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "my_secrets.txt",
                "content": "secret"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "my_secrets.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "backup.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "my_secrets.txt.bak"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "backup.sh"
            }
        },
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "my_secrets.txt.bak"
            }
        },
        {
            "validator": "command_succeeds",
            "args": {
                "command": "test -x backup.sh"
            }
        }
    ]
}
