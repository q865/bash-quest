{
  "title": "Первый Bash-скрипт",
  "hint": "Сначала `chmod +x trainee_stuff/hello.sh`, а потом `./trainee_stuff/hello.sh > trainee_stuff/hello_output.txt`",
  "validation": [
    {
      "validator": "file_exists",
      "args": {
        "path": "trainee_stuff/hello.sh"
      }
    },
    {
      "validator": "file_contains",
      "args": {
        "path": "trainee_stuff/hello_output.txt",
        "content": "Заебись, я родился!"
      }
    }
  ],
  "cleanup": [
    {
      "action": "delete_file",
      "args": {
        "path": "trainee_stuff/hello.sh"
      }
    },
    {
      "action": "delete_file",
      "args": {
        "path": "trainee_stuff/hello_output.txt"
      }
    }
  ]
}
