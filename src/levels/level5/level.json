{
    "title": "Чтение и склеивание файлов",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "part1.txt",
                "content": "Дед привёз 100 литров самогона."
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "part2.txt",
                "content": "А утром осталось только 50."
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "part1.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "part2.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "full_story.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "full_story.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "full_story.txt",
                "content": "Дед привёз 100 литров самогона.А утром осталось только 50."
            }
        }
    ]
}
