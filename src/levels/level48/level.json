{
    "title": "Подбор паролей: Брутфорс",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "passwords.txt",
                "content": "12345\nqwerty\npassword\nsecret123"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "passwords.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "bruteforcer.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "found_password.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node bruteforcer.js > found_password.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "found_password.txt",
                "content": "password"
            }
        }
    ]
}
