{
    "title": "Управление процессами",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "start.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "stop.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "server.pid"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "bash start.sh && ps -p $(cat server.pid) > /dev/null && bash stop.sh && ! ps -p $(cat server.pid) > /dev/null"
            }
        }
    ]
}
