{
    "title": "Условия `if`",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "lockfile"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "lockfile"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "checker.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "status.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "bash checker.sh && grep -q 'BUSY' status.txt"
            }
        },
        {
            "validator": "command_succeeds",
            "args": {
                "command": "rm lockfile && bash checker.sh && grep -q 'FREE' status.txt"
            }
        }
    ]
}
