{
    "title": "Планировщик `cron`",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "heartbeat.log"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "log.sh"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "bash log.sh"
            }
        },
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "heartbeat.log"
            }
        }
    ]
}
