{
    "title": "Обработка HTML с `cheerio`",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "scraper.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "title.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node scraper.js > title.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "title.txt",
                "content": "Example Domain"
            }
        }
    ]
}
