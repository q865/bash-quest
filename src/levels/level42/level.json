{
    "title": "Автоматизация браузера: Puppeteer",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "screenshot.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "page.png"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node screenshot.js"
            }
        },
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "page.png"
            }
        }
    ]
}
