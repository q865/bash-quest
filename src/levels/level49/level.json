{
    "title": "Взлом людей: Социальная инженерия",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "philosophy.js"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "output.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node philosophy.js > output.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "output.txt",
                "content": "The human is the weakest link"
            }
        }
    ]
}
