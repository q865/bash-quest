{
    "title": "Поиск с `grep`",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "log1.txt",
                "content": "INFO: System boot\nWARN: Low memory"
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "log2.txt",
                "content": "INFO: User login\nFATAL_ERROR: BLYAT-47 - Core meltdown imminent"
            }
        },
        {
            "action": "create_file",
            "args": {
                "path": "log3.txt",
                "content": "INFO: Tea is ready\nSECRET_LEVEL_CODE: ded_rules_1337"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "log1.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "log2.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "log3.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "error_report.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "error_report.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "error_report.txt",
                "content": "FATAL_ERROR: BLYAT-47"
            }
        }
    ]
}
