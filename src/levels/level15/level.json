{
    "title": "Сетевая разведка с `dig`",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "mail_servers.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "file_system_entry_exists",
            "args": {
                "path": "mail_servers.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "mail_servers.txt",
                "content": "mx.google.com"
            }
        }
    ]
}
