{
    "title": "Работа с файлами в Node.js",
    "setup": [
        {
            "action": "create_file",
            "args": {
                "path": "source.txt",
                "content": "copy me"
            }
        }
    ],
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "source.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "destination.txt"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "copier.js"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "node copier.js source.txt destination.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "destination.txt",
                "content": "copy me"
            }
        }
    ]
}
