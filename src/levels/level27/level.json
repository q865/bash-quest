{
    "title": "Переменные и аргументы",
    "cleanup": [
        {
            "action": "delete_file",
            "args": {
                "path": "greeter.sh"
            }
        },
        {
            "action": "delete_file",
            "args": {
                "path": "output.txt"
            }
        }
    ],
    "validation": [
        {
            "validator": "command_succeeds",
            "args": {
                "command": "bash greeter.sh Ded > output.txt"
            }
        },
        {
            "validator": "file_content_matches",
            "args": {
                "path": "output.txt",
                "content": "Zdarova, Ded"
            }
        }
    ]
}
