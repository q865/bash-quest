{
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": ["node_modules/", "dist/", "*.min.js"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-unused-vars": "warn",
        "@typescript-eslint/no-unused-expressions": "off"
    }
}
